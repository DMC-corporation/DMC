{% extends 'DMCMainBundle::Default/backOffice.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des cat&eacute;gories
{% endblock %}

{% block body %}
<h1>Liste des cat&eacute;gories</h1>
<blockquote>
Listing de toutes les cat&eacute;gories
</blockquote>

<table class="records_list table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Motscles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.motsCles }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('categorie_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('categorie_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('categorie_new') }}">
            Cre&eacute;r une nouvelle cat&eacute;gorie
        </a>
    </li>
</ul>
{% endblock %}