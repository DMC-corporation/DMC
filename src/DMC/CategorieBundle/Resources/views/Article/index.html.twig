{% extends 'DMCMainBundle::Default/backOffice.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des articles
{% endblock %}

{% block body %}
<h1>Liste des articles</h1>
<blockquote>
Listing de toutes les articles, pas de filtre ni rien pour le moment, faut pas pousser ;)
</blockquote>

<table class="records_list table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Type</th>
            <th>Date_sortie</th>
            <th>Date_validite</th>
            <th>Date_maj</th>
            <th>Creation_date</th>
            <th>Update_date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.prix }}</td>
            <td>{{ entity.type }}</td>
            <td>{% if entity.datesortie %}{{ entity.datesortie|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.datevalidite %}{{ entity.datevalidite|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.datemaj %}{{ entity.datemaj|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.creationdate %}{{ entity.creationdate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updatedate %}{{ entity.updatedate|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('article_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('article_new') }}">
            Cr&eacute;er un nouvel article
        </a>
    </li>
</ul>
{% endblock %}