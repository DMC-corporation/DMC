{% extends 'DMCMainBundle::Default/backOffice.html.twig' %}

{% block title %}
    {{ parent() }} - Liste des articles
{% endblock %}

{% block body %}
<h1>Article</h1>

<table class="record_properties table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ entity.prix }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>Date_sortie</th>
            <td>{{ entity.datesortie|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Date_validite</th>
            <td>{{ entity.datevalidite|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Date_maj</th>
            <td>{{ entity.datemaj|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Creation_date</th>
            <td>{{ entity.creationdate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Update_date</th>
            <td>{{ entity.updatedate|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('article') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('article_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('article_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}