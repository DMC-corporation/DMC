	<script>
	function hideOrShow(id){
			if($("#"+id).is(":visible")){
				$("#"+id).hide("blind", { direction: "vertical" }, 500);
			}else{
				$("#"+id).show("blind", { direction: "vertical" }, 500);
			}
		}				
	</script>
