	$(window).scroll(function() {
		if($(window).scrollTop() == 0){
		$('#scrollToTop').fadeOut("fast");
		} else {
		if($('#scrollToTop').length == 0){

		}
		$('#scrollToTop').fadeIn("fast");
		}
	});

	$('#scrollToTop a').live('click', function(event){
