<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}DMC - BackOffice{% endblock %}</title>
        {% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('bundles/dmcmain/css/bootstrap.css') }}" type="text/css" media="all" />
		<link rel="stylesheet" href="{{ asset('bundles/dmcmain/css/bootstrap-responsive.css') }}" type="text/css" media="all" />
		<link rel="stylesheet" href="{{ asset('bundles/dmcmain/css/style_backOffice.css') }}" type="text/css" media="all" />
	{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	<div id="bandeauSup">
		{% block logo %}
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
			  <div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				  <span class="icon-bar"></span>

				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				</a>
				<a class="brand" href="{{ path('backoffice') }}">Dessine moi un cadeau - Back Office</a>
				<div class="nav-collapse">
				  <ul class="nav">
					<li class="active"><a href="{{ path('homepage') }}">Accès Front Office</a></li>
				  </ul>
				  <form class="navbar-search pull-right" action="">
					<input type="text" class="search-query span2" placeholder="Search">
				  </form>
				  <ul class="nav pull-right">
					<li><a href="{{ path('fos_user_security_logout') }}">Deconnexion</a></li>
				  </ul>
				</div><!-- /.nav-collapse -->
			  </div>
			</div><!-- /navbar-inner -->
		  </div><!-- /navbar -->
		{% endblock %}
	</div>
	<div  class="row-fluid">
		<div class="span2">
			<div id="menu" class="well">
			{% block menu %}
				<ul class="nav nav-list">
					<li class="nav-header">
						Menu principal
					</li>
					<li>
						<a href="{{ path('backoffice') }}"><i class="icon-home"></i>Accueil du backoffice</a>
					</li>
					<li>
						<a href="{{ path('article') }}"><i class="icon-gift"></i>Gestion Article</a>
					</li>
					<li>
						<a href="{{ path('categorie') }}"><i class="icon-shopping-cart"></i>Gestion Catégorie</a>
					</li>
					<li>
						<a href="{{ path('profil') }}"><i class="icon-user"></i>Gestion des profils</a>
					</li>
					<li>
						<a href="{{ path('question') }}"><i class="icon-folder-close"></i>Gestion des questions</a>
					</li>
				</ul>
			{% endblock %}
			</div>
		</div>
		<div class="span10">
			<div id="body">
				{% block body %}{% endblock %}
			</div>
		</div>
		
	</div>
	<div class="row-fluid">
		<div id="footer">
			{% block footer %}
			{% endblock %}
		</div>
	</div>
	{% block javascripts %}{% endblock %}
    </body>
</html>
